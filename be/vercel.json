{
  "version": 2,
  "builds": [
    { "src": "api.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/getRecordById", "dest": "api.js" },
    { "src": "/api/getRecordByName", "dest": "api.js" },
    { "src": "/api/getRecordsByCategory", "dest": "api.js" },
    { "src": "/api/getAllCategories", "dest": "api.js" },
    { "src": "/api/getAllNames", "dest": "api.js" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ]
}